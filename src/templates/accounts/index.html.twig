{% extends 'base.html.twig' %}

{% block title %}Clients - Bank Admin{% endblock %}

{% block body %}
    <p class="text-2xl font-bold text-black-700">Comptes</p>
    <div>
        {% for account in accounts %}
            <div class="flex justify-around items-center mt-5 p-1 bg-gray-200 rounded-lg shadow">
                <div>
                    <p class="text-lg font-semibold text-gray-700">
                        ID: <span class="text-blue-500">{{ account.id }}</span>
                    </p>
                    <p class="text-lg font-semibold text-gray-700">
                        Type: <span class="text-blue-500">{{ account.accountType }}</span>
                    </p>
                    <p class="text-lg font-semibold text-gray-700">
                        Montant: <span class="text-blue-500">{{ account.balance }}</span>
                    </p>
                    <p class="text-lg font-semibold text-gray-700">
                        Nombre: <span class="text-blue-500">{{ account.accountNumber }}</span>
                    </p>
                </div>
                <div>
                    <canvas id="{{ account.id }}"></canvas>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="flex justify-between">
        <a href="{{ path('app_accounts_new') }}" class="btn btn-primary">Ajouter un compte</a>
        <a href="{{ path('app_logout') }}" class="btn btn-secondary">DÃ©connexion</a>
    </div>
{% endblock %}
