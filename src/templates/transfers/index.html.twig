{% extends 'base.html.twig' %}

{% block title %}Transfers - Bank Admin{% endblock %}

{% block body %}
	<p class="text-2xl font-bold mb-4">Liste total des transaction</p>

	<section>
		{% for transfer in transfers %}
			<div class="mt-5 p-5 bg-gray-200 rounded-lg shadow">
				<p class="text-lg font-semibold text-gray-700">
					Montant du virement:
					<span class="text-blue-500">{{ transfer.amount }}</span>
				</p>
				<p class="text-lg font-semibold text-gray-700">
					Compte de départ:
					<span class="text-blue-500">{{ transfer.noAccountEmitter }}</span>
				</p>
				<p class="text-lg font-semibold text-gray-700">
					Compte d'arrivée:
					<span class="text-blue-500">{{ transfer.noAccountReceiver }}</span>
				</p>
				<p class="text-lg font-semibold text-gray-700">
					Date:
					<span class="text-blue-500">{{ transfer.date|date('Y-m-d') }}</span>
				</p>
				<a href="{{ path('app_transfers_remove', { id: transfer.id }) }}" class="mt-3 inline-block px-4 py-2 bg-red-500 text-white font-bold rounded-lg shadow hover:bg-red-700">
					Annuler l'opération
				</a>
			</div>
		{% endfor %}
	</section>
{% endblock %}
