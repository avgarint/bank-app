{% extends 'base.html.twig' %}

{% block title %}Clients - Bank Admin
{% endblock %}

{% block body %}
	<section
		class="p-6 bg-gray-100 rounded-lg shadow-md space-y-6">
		<!-- Détails du client -->
		<div class="bg-white p-6 rounded-lg shadow">
			<h1 class="text-2xl font-bold text-gray-700 mb-4">Détails du client</h1>
			<p class="text-gray-600">
				<strong class="text-gray-800">ID :</strong>
				{{ client.id }}
			</p>
			<p class="text-gray-600">
				<strong class="text-gray-800">Email :</strong>
				{{ client.email }}
			</p>
		</div>

		<!-- Comptes associés -->
		<div class="bg-white p-6 rounded-lg shadow">
			<h2 class="text-xl font-semibold text-gray-700 mb-4">Comptes associés</h2>
			<ul class="space-y-4">
				{% for account in accounts %}
					<li class="flex justify-between items-center p-4 bg-gray-100 rounded-lg shadow-md hover:bg-gray-200 transition">
						<div>
							<p class="text-lg font-semibold text-gray-700">
								<strong class="text-blue-500">Numéro :</strong>
								{{ account.number }}
							</p>
							<p class="text-sm text-gray-600">
								<strong class="text-gray-700">Solde :</strong>
								{{ account.balance }}
								€
							</p>
						</div>
						<a href="{{ path('app_accounts_remove', { 'id': account.id }) }}" class="text-red-500 hover:text-red-700 transition">Supprimer</a>
					</li>
				{% else %}
					<li class="text-gray-600 text-center">Aucun compte associé.</li>
				{% endfor %}
			</ul>
		</div>
	</section>
{% endblock %}
